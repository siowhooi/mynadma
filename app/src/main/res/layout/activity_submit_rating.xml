<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfflineDisasterGuideListActivity"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:gravity="top">

        <!-- Include App Bar -->
        <include
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:gravity="top">
            <!-- Form Heading -->
            <TextView
                android:id="@+id/formHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ratingFormHeading"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/formTownState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pekan, Pahang"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Rating Bar -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:numStars="5"
            android:stepSize="1"
            android:rating="0" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Submit Button -->
            <Button
                android:id="@+id/submitRatingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginEnd="8dp"
                android:textColor="@android:color/white"
                android:background="@color/purple"
                android:padding="12dp"
                android:elevation="4dp"
                android:tooltipText="Submit your rating!" />

            <!-- Delete Button -->
            <Button
                android:id="@+id/deleteRatingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@android:color/white"
                android:background="@color/red"
                android:padding="12dp"
                android:elevation="4dp"
                android:tooltipText="Delete your rating!" />

        </LinearLayout>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>