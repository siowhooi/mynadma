<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeView"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:gravity="top">

        <!-- Include the AppBar -->
        <include
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Title TextView -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_marginTop="16dp"/>

        <!-- Disaster Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp">

            <!-- Disaster Type -->
            <TextView
                android:id="@+id/disasterTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disaster Type: Flood"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Disaster Location -->
            <TextView
                android:id="@+id/disasterLocationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location: New York"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Disaster Severity -->
            <TextView
                android:id="@+id/disasterSeverityTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Severity: High"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Optionally, you can add an ImageView to display an icon for the disaster -->
            <ImageView
                android:id="@+id/disasterImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="Disaster Image"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"/>

        </LinearLayout>

    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/drawer_header"
        android:fitsSystemWindows="false"/>

</androidx.drawerlayout.widget.DrawerLayout>